<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_full"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvHealthNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is Zeewaka health news. Please register to see full details."
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:lineSpacingMultiplier="1.3" />

    <ImageView
        android:id="@+id/ivNewsHealthImage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:src="@drawable/img_news_placeholder"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium_2">

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvNewsCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:text="Pretty"
            android:textColor="@color/category_text"
            android:textSize="@dimen/text_small"/>

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvNewsAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dj_lay"
            android:drawableLeft="@drawable/ic_account_circle_16dp"
            android:drawablePadding="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_small" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/tvNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, September 12, 2016"
            android:drawableLeft="@drawable/ic_access_time_16dp"
            android:drawablePadding="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
